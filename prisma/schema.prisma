
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
   CUSTOMER
   ADMIN
   SELLER
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique 
  password String
  role Role @default(CUSTOMER) 
  avatar String?
  refreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


